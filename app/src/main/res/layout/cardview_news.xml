<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewMainMenuTigaMenu"
    android:padding="16dp"
    android:orientation="vertical"
    card_view:cardElevation="0dp"
    style="@style/CardView"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">'

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/chrvches"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profpic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chrvches"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivThumbnail"/>

        <TextView
            android:id="@+id/usernamePost"
            android:layout_toRightOf="@id/civ_profpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHVRCHES"
            android:textSize="20sp"
            android:textColor="#EC644B"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tvNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernamePost"
            android:layout_toRightOf="@id/ivThumbnail"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:text="Chvrches Live in Jakarta"
            android:textColor="@color/textColorGray"/>

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_thumb_up"
            android:layout_toRightOf="@id/ivThumbnail"
            android:layout_below="@id/tvNews"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/liker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marine"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/likeIcon"
            android:layout_below="@id/tvNews"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/likerOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and 45 others"
            android:textSize="10sp"
            android:textColor="@color/textColorGray"
            android:layout_toRightOf="@id/liker"
            android:layout_below="@id/tvNews"
            android:layout_marginTop="10dp"
            android:foregroundGravity=""/>

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_mode_comment"
            android:layout_toRightOf="@id/likerOther"
            android:layout_below="@id/tvNews"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNews"
            android:layout_toRightOf="@id/ivComment"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="5"
            android:textColor="@color/textColorGray"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>